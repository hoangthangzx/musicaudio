<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0DFFFFFF"
                android:endColor="#0DFFFFFF"
                android:angle="90"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- Inner solid with background color -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#02051F" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- Transparent overlay -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#0DFFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
